    class="flex flex-col items-center justify-center md:flex-row md:justify-center md:items-center w-[80%] h-[100%] gap-16"
  >
    <div class="flex">
      <div class=""></div>
      <div></div>
      <div></div>
    </div>
    <h1 class="text-xl">Proyects</h1>
