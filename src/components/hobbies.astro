---
import DevIcon from "../assets/dev-icon.astro";
import Separator from "./Separator.astro";
import Badge from "./badge.astro";
---

<div class=" w-[90%] lg:w-[100%] h-auto md:h-[75%] py-5 px-2 rounded-xl border border-border-color bg-background-color">
  <!-- TODO: Revisar si agrego supabase o otra tecnologia por hobby -->
  <div
    class="flex flex-col lg:flex-row lg:pb-5 gap-2 md:gap-2 justify-center items-center w-full"
  >
    <DevIcon />
    <h3 class="text-3xl font-bold lg:mb-0 text-center">
        Hobby use
    </h3>
  </div>
  <Separator />
  <div
    class="flex flex-wrap gap-4 md:gap-4 mx-auto justify-center items-center pt-5 text-center h-auto w-[90%] md:w-full font-bold text-base"
  >
  <Badge name="Astro" astro={true}/>
  <Badge name="Express" express={true}/>
  <Badge name="Mongoose" mongoose={true}/>
  </div>
</div>
