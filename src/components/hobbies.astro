---
import Separator from "./Separator.astro";
import Badge from "./Badge.astro";
import HobbyIcon from "../assets/hobby-icon.astro";
---

<div class="w-[80%] h-auto md:h-auto py-5 px-2 rounded-xl border border-blue-950/80 bg-background-color">
  <!-- TODO: Revisar si agrego supabase o otra tecnologia por hobby -->
  <div
  class="flex flex-col items-center justify-center w-full lg:flex-row pb-5 md:gap-2"
  >
    <HobbyIcon />
    <h3 class="text-xl font-bold lg:mb-0 text-center">
        Hobby use
    </h3>
  </div>
  <div
    class="flex flex-wrap gap-3 mx-auto justify-center items-center text-center h-auto w-[90%] md:w-full font-bold text-base"
  >
  <Badge name="Astro" astro={true}/>
  <Badge name="Express" express={true}/>
  <Badge name="Mongoose" mongoose={true}/>
  </div>
</div>
