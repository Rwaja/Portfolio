---
import VisitIcon from "../assets/visit-icon.astro";
import CodeIcon from "../assets/code-icon.astro";
import Separator from "./Separator.astro";
import Stack from "./Stack.astro";
import Badge from "./badge.astro";
import Status from "./status.astro";
import Dialog from "./Dialog.astro";

interface Props {
  id: string;
  title: string;
  description: string;
  image: string;
  url: string;
  dialog: {
    introduction: string;
    history: string;
    funcionalidades: string;
    desafios: string;
  };
  demo?: string;
  urlRepo: string;
  repo: boolean;
  next?: boolean;
  ts?: boolean;
  node?: boolean;
  tailwind?: boolean;
  react?: boolean;
  astro?: boolean;
  mongo?: boolean;
  prisma?: boolean;
  beta?: boolean;
  dev?: boolean;
  front?: boolean;
  back?: boolean;
  fullstack?: boolean;
}
const {
  id,
  title,
  description,
  image,
  url,
  dialog,
  demo,
  urlRepo,
  repo,
  next,
  ts,
  node,
  tailwind,
  react,
  astro,
  mongo,
  prisma,
  beta,
  dev,
  front,
  back,
  fullstack,
} = Astro.props;
---

<article
  class="max-w-xs mx-auto w-auto bg-background-color text-[#ebecf3] rounded-xl md:flex md:flex-col md:max-w-md border-2 border-border-color hover:shadow-blue duration-150 shadow-2xl"
>
  <div
    class="mx-1 my-1 duration-150 md:flex-shrink-0 md:mx-2 md:my-2 transition ease-linear hover:scale-105"
  >
    <img
      alt="AOTM landing page"
      class="object-fill w-full"
      src={image}
      style={{
        aspectRatio: "400/300",
      }}
    />
  </div>
  <div class="flex flex-col">
    <div class="pt-5 text-2xl font-black text-center">
      <div class="flex flex-row md:gap-2 w-[100%] items-center">
        <Separator />
        <h1 class="flex-shrink-0 text-white w-[60%] md:w-auto select-none">
          {title}
          <span class="text-blue-500">.</span>
        </h1>

        <!-- <div class="flex gap-4 pt-5 mx-auto md:pt-0 md:mx-0 md:pr-10">
          <a class="text-[#ebecf3] hover:text-blue-500" href={url} target="_blank"
          >
          {url && <VisitIcon />}
        </a>
        <a
          class="text-[#ebecf3] hover:text-blue-500"
          href={urlRepo}
          target="_blank"
        >
          {repo && <CodeIcon />}
        </a>
      </div> -->
        <Separator />
      </div>

      <div
        class="flex flex-wrap justify-center flex-grow w-auto h-auto max-w-[75%] gap-2 p-1 py-5 mx-auto select-none rounded-3xl"
      >
        <Status beta={beta} dev={dev} front={front} fullstack={fullstack} />
      </div>
    </div>

    <div class="items-center p-1 md:flex md:flex-col">
      <div
        class="w-[100%] mx-auto px-auto text-sm md:text-base font-normal min-h-[50%] rounded-lg"
      >
        <p class="px-5">
          {description}
        </p>
        <Dialog uniqueId={id} imgurl={image} title={title}>
          <article class="text-white">
            <div
              class="flex flex-col items-center md:items-start justify-center md:flex-row pt-5"
            >
              <img
                alt="AOTM landing page"
                class="object-fill w-auto md:w-[45%] float-left"
                src={image}
                style={{
                  aspectRatio: "200/150",
                }}
              />
              <div class="flex flex-col justify-center items-center">
                <div
                  class="flex md:gap-2 items-center w-full pt-5 md:pt-1 text-center"
                >
                  <h1
                    class="flex-shrink text-white w-full md:w-auto select-none text-4xl font-black"
                  >
                    {title}
                    <span class="text-blue-500">.</span>
                  </h1>
                </div>
                <p class="w-full md:w-[95%] py-3">{dialog.introduction}</p>
                <div
                  class="flex-grow flex flex-wrap gap-2 p-1 h-auto w-auto md:w-[80%] justify-center items-center rounded-lg my-3 md:mt-3 select-none"
                >
                  <Stack
                    ts={ts}
                    next={next}
                    node={node}
                    tailwind={tailwind}
                    react={react}
                    astro={astro}
                    mongo={mongo}
                    prisma={prisma}
                  />
                </div>
              </div>
            </div>
            <section class="flex flex-col gap-5">
              <div>
                <div
                  class="flex md:gap-2 items-center w-full text-3xl font-black text-center pb-2"
                >
                  <h1
                    class="flex-shrink-0 text-white w-auto md:w-auto select-none"
                  >
                    Historia
                    <span class="text-blue-500">.</span>
                  </h1>
                  <Separator />
                </div>
                <p class="w-full">{dialog.history}</p>
              </div>
              <div>
                <div
                  class="flex md:gap-2 items-center w-full text-3xl font-black text-center pb-2"
                >
                  <Separator />
                  <h1
                    class="flex-shrink-0 text-white w-auto md:w-auto select-none"
                  >
                    Funcionalidades
                    <span class="text-blue-500">.</span>
                  </h1>
                </div>
                <p>
                  {dialog.funcionalidades}
                </p>
              </div>
              <div>
                <div
                  class="flex md:gap-2 items-center w-full text-3xl font-black text-center pb-2"
                >
                  <h1
                    class="flex-shrink-0 text-white w-auto md:w-auto select-none"
                  >
                    Desafios
                    <span class="text-blue-500">.</span>
                  </h1>
                  <Separator />
                </div>
                <p>
                  {dialog.desafios}
                </p>
              </div>
            </section>
          </article>
        </Dialog>
        <div>
          <div></div>
          <div class="py-5">
            <div class="flex items-center gap-2">
              <Separator />
              <span class="flex text-2xl font-black text-blue-500"
                ><h3
                  class="text-2xl font-black text-center text-white select-none"
                >
                  STACK
                </h3>.</span
              >
              <Separator />
            </div>
            <div
              class="flex-grow flex flex-wrap gap-2 p-1 h-auto mx-auto w-auto md:w-[100%] justify-center items-center rounded-lg mt-2 select-none"
            >
              <Stack
                ts={ts}
                next={next}
                node={node}
                tailwind={tailwind}
                react={react}
                astro={astro}
                mongo={mongo}
                prisma={prisma}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
