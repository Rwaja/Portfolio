---
import { Picture } from "astro:assets";
const {title, description, image, url, urlGithub} = Astro.props;
---

<article
  class="max-w-xs mx-auto w-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-4xl"
>
  <div class="md:flex">
    <div class="md:flex-shrink-0">
      <Picture
        alt="Man looking at item at a store"
        class="h-full w-full object-cover md:w-72"
        height="300"
        src={image}
        style={{
          aspectRatio: "300/300",
          objectFit: "cover",
        }}
        width="300"
      />
    </div>
    <div class="p-8">
      <div>
        <h1
          class="block mt-1 text-lg leading-tight font-medium text-black hover:underline"
        >
          { title }
        </h1>
      </div>
      <div class="mt-2 text-gray-500">
        { description}
      </div>
      <div class="mt-4 flex gap-4">
        <a class="text-blue-600 hover:text-blue-500" href={url} target="_blank"> View Project</a>
        <a class="text-blue-600 hover:text-blue-500" href={urlGithub} target="_blank"> GitHub Repo</a>
      </div>
    </div>
  </div>
</article>
