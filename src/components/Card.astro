---
import Tecnologias from "./Stack.astro";
import VisitIcon from "../assets/visit-icon.astro";
import CodeIcon from "../assets/code-icon.astro";
import Separator from "./Separator.astro";
import Stack from "./Stack.astro";
const {
  title,
  description,
  image,
  url,
  demo,
  urlRepo,
  repo,
  next,
  ts,
  node,
  tailwind,
  react,
  astro,
  mongo,
  prisma,
} = Astro.props;
---

<article
  class="max-w-xs mx-auto w-auto bg-[#111] text-[#ebecf3] rounded-xl md:flex md:max-w-4xl border border-border-color hover:shadow-blue duration-700"
>
  <div class="hover:origin-bottom hover:-rotate-3 duration-200 md:flex-shrink-0 md:my-auto m-2 border-2 border-background-color">
    <img
      alt="Man looking at item at a store"
      class="h-auto w-auto object-cover md:w-72"
      height="300"
      src={image}
      style={{
        aspectRatio: "300/300",
        objectFit: "cover",
      }}
      width="300"
    />
  </div>

  <div class="md:flex md:flex-col p-1 ml-2 rounded-xl">
    <div class="mt-1 text-4xl mx-auto font-semibold text-center">
      <h1>
        {title}
      </h1>
    </div>
    <div class="mt-5 text-lg font-normal min-h-[96px] text-white">
      {description}
    </div>
    <div
      class="flex-grow flex flex-wrap gap-6 p-1 border-2 bg-background-color border-border-color h-auto mx-auto w-auto rounded-3xl justify-center mt-5 "
    >
      <Stack
        ts={ts}
        next={next}
        node={node}
        tailwind={tailwind}
        react={react}
        astro={astro}
        mongo={mongo}
        prisma={prisma}
      />
    </div>
    <div class="mt-5 flex justify-center items-center gap-4">
      <a class="text-[#ebecf3] hover:text-blue-500" href={url} target="_blank"
        >
        {url && <VisitIcon />}
      </a>
      <a
        class="text-[#ebecf3] hover:text-blue-500"
        href={urlRepo}
        target="_blank"
      >
        {repo && <CodeIcon />}
      </a>
    </div>
  </div>
</article>
